     *)
         if [[ x"${mycmd}" != x"" ]] ; then
            rdegiterror "Unknown or not Implemented Command: ${mycmd}";
         fi;
   esac
   if [[ ${myupdate} = 1 && ${wasupdated} == 0 ]] ; then
      rdegitupdate add
   fi
fi

exit $mystatus
